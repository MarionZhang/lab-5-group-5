<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/avatar_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:text="@string/select_avatar" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp">

            <ImageView
                android:id="@+id/img_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:onClick="SetTeamIcon"
                tools:srcCompat="@tools:sample/avatars"
                android:src="@drawable/flag_ca" />


            <ImageView
                android:id="@+id/img_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:onClick="SetTeamIcon"
                tools:srcCompat="@tools:sample/avatars"
                android:src="@drawable/flag_eg"/>

            <ImageView
                android:id="@+id/img_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:onClick="SetTeamIcon"
                tools:srcCompat="@tools:sample/avatars"
                android:src="@drawable/flag_fr"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp">

            <ImageView
                android:id="@+id/img_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars"
                android:onClick="SetTeamIcon"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/flag_jp"/>


            <ImageView
                android:id="@+id/img_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars"
                android:onClick="SetTeamIcon"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/flag_sp"/>

            <ImageView
                android:id="@+id/img_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars"
                android:src="@drawable/flag_tr"
                android:onClick="SetTeamIcon"
                android:layout_marginHorizontal="5dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp">

            <ImageView
                android:id="@+id/img_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars"
                android:onClick="SetTeamIcon"
                android:src="@drawable/flag_uk"
                android:layout_marginHorizontal="5dp"/>

            <ImageView
                android:id="@+id/img_21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars"
                android:onClick="SetTeamIcon"
                android:src="@drawable/flag_us"
                android:layout_marginHorizontal="5dp"/>

            <ImageView
                android:id="@+id/img_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars"
                android:onClick="SetTeamIcon"
                android:src="@drawable/flag_kr"
                android:layout_marginHorizontal="5dp"/>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>