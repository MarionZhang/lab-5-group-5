<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="416dp"
        android:layout_height="500dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp">

            <ImageView
                android:id="@+id/img_00"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginHorizontal="5dp"
                android:contentDescription="@string/app_name"
                android:onClick="SetTeamIcon"
                tools:ignore="DuplicateSpeakableTextCheck"
                tools:srcCompat="@drawable/flag_ca" />


            <ImageView
                android:id="@+id/img_01"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginHorizontal="5dp"
                android:contentDescription="@string/app_name"
                android:onClick="SetTeamIcon"
                tools:srcCompat="@drawable/flag_eg" />

            <ImageView
                android:id="@+id/img_02"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginHorizontal="5dp"
                android:contentDescription="@string/app_name"
                android:onClick="SetTeamIcon"
                tools:srcCompat="@drawable/flag_fr" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp">

            <ImageView
                android:id="@+id/img_10"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginHorizontal="5dp"
                android:contentDescription="@string/app_name"
                android:onClick="SetTeamIcon"
                tools:srcCompat="@drawable/flag_jp" />


            <ImageView
                android:id="@+id/img_11"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginHorizontal="5dp"
                android:contentDescription="@string/app_name"
                android:onClick="SetTeamIcon"
                tools:srcCompat="@drawable/flag_sp" />

            <ImageView
                android:id="@+id/img_12"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginHorizontal="5dp"
                android:contentDescription="@string/app_name"
                android:onClick="SetTeamIcon"
                tools:srcCompat="@drawable/flag_tr" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp">

            <ImageView
                android:id="@+id/img_20"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginHorizontal="5dp"
                android:contentDescription="@string/app_name"
                android:onClick="SetTeamIcon"
                tools:srcCompat="@drawable/flag_uk" />

            <ImageView
                android:id="@+id/img_21"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginHorizontal="5dp"
                android:contentDescription="@string/app_name"
                android:onClick="SetTeamIcon"
                tools:srcCompat="@drawable/flag_us" />

            <ImageView
                android:id="@+id/img_22"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginHorizontal="5dp"
                android:contentDescription="@string/app_name"
                android:onClick="SetTeamIcon"
                tools:srcCompat="@drawable/flag_kr" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/avatar_textview"
        android:layout_width="363dp"
        android:layout_height="83dp"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="@string/select_avatar"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>